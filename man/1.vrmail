	       VM_MAILCMD=mailx
	       cmd=$1
	       msg=$2
	       file=/dev/null
	       if [ $# -eq 3 ];	then file=$3; fi
	       ridx=$4
	       case $cmd in
		   save)
		       eval "echo s $msg $file | ${VM_MAILCMD} -N -f ${VM_MAILFILE}"
		       ;;
		   *)
		       ;;
	       esac

